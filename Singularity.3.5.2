BootStrap: docker
From: ubuntu:16.04

%labels
  Maintainer tpall
  R_Version 3.5.2

%apprun R
  exec R "${@}"

%apprun Rscript
  exec Rscript "${@}"

%runscript
  exec R "${@}"

%post
  # Software versions
  export R_VERSION=3.5.2

  # Get dependencies
  apt-get update
  apt-get install -y --no-install-recommends \
    locales

  # Configure default locale
  echo "en_US.UTF-8 UTF-8" >> /etc/locale.gen
  locale-gen en_US.utf8
  /usr/sbin/update-locale LANG=en_US.UTF-8
  export LC_ALL=en_US.UTF-8
  export LANG=en_US.UTF-8

  # Install R
  echo "deb http://cloud.r-project.org/bin/linux/ubuntu trusty-cran35/" > /etc/apt/sources.list.d/r.list
  apt-key adv --keyserver keyserver.ubuntu.com --recv-keys E084DAB9
  apt-get update
  apt-get install -y --no-install-recommends \
    r-base=${R_VERSION}* \
    r-base-core=${R_VERSION}* \
    r-base-dev=${R_VERSION}* \
    r-recommended=${R_VERSION}* \
    r-base-html=${R_VERSION}* \
    r-doc-html=${R_VERSION}* \
    pandoc \
    pandoc-citeproc \
    libcurl4-openssl-dev \
    libssl-dev \
    libxml2-dev \
    libcairo2-dev \
    libxt-dev \
    git \
    subversion \
    openssh-client
  
  # Install rstan  
  # Add marutter's c2d4u repository, (and rrutter for CRAN builds too)
  add-apt-repository -y "ppa:marutter/rrutter"
  add-apt-repository -y "ppa:marutter/c2d4u"
  apt-get update
  apt-get install r-cran-rstan
  
  # C++ toolchain configuration
  Rscript -e 'dotR <- file.path(Sys.getenv("HOME"), ".R")'
  Rscript -e 'if (!file.exists(dotR)) dir.create(dotR)'
  Rscript -e 'M <- file.path(dotR, "Makevars")'
  Rscript -e 'if (!file.exists(M)) file.create(M)'
  Rscript -e 'cat("\nCXX14FLAGS=-O3 -march=native -mtune=native -fPIC","CXX14=g++",file = M,sep = "\n", append = TRUE)'

  # Add a default CRAN mirror
  echo "options(repos = c(CRAN = 'https://cloud.r-project.org/'), download.file.method = 'libcurl')" >> /usr/lib/R/etc/Rprofile.site

  # Add a directory for host R libraries
  mkdir -p /library
  echo "R_LIBS_SITE=/library:\${R_LIBS_SITE}" >> /usr/lib/R/etc/Renviron.site

  # Clean up
  rm -rf /var/lib/apt/lists/*
